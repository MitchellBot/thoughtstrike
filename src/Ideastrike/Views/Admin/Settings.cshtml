@model Ideastrike.Models.ViewModels.SettingsViewModel
<ul class="pills">
    <li><a href="/admin/">@Ideastrike.Localization.Strings.Admin_Home</a></li>
    <li class="active"><a href="/admin/settings">@Ideastrike.Localization.Strings.Admin_Settings</a></li>
    <li><a href="/admin/users">@Ideastrike.Localization.Strings.Admin_Users</a></li>
    <li><a href="/admin/moderation">@Ideastrike.Localization.Strings.Admin_Moderation</a></li>
</ul>
@using (Html.BeginForm("settings"))
{ 
    <fieldset>
        <legend>@Ideastrike.Localization.Strings.Admin_GeneralSettings</legend>
        <div class="clearfix">
            <label for="title">@Ideastrike.Localization.Strings.Admin_SiteTitle</label>
            <div class="input">
                @Html.TextBoxFor(model => model.SiteTitle, new { @class = "xlarge" })
            </div>
        </div>
        <div class="clearfix">
            <label for="yourname">@Ideastrike.Localization.Strings.Admin_YourName</label>
            <div class="input">
                @Html.TextBoxFor(model => model.Name, new { @class = "xlarge" })
                <span class="help-block">@Ideastrike.Localization.Strings.Admin_OrganizationNameHelp</span>
            </div>
        </div>
        <div class="clearfix">
            <label for="welcomemessage">@Ideastrike.Localization.Strings.Admin_WelcomeMessage</label>
            <div class="input">
                @Html.TextAreaFor(model => model.WelcomeMessage)
                <span class="help-block">@Ideastrike.Localization.Strings.Admin_RootHelp
                    <br />
                    <em>This uses <a href="http://daringfireball.net/projects/markdown/syntax">Markdown</a></em></span>
            </div>
        </div>
        <div class="clearfix">
            <label for="homepage">@Ideastrike.Localization.Strings.Admin_Homepage</label>
            <div class="input">
                @Html.TextBoxFor(model => model.HomePage, new { @class = "xlarge" })
                <span class="help-block">@Ideastrike.Localization.Strings.Admin_HomepageHelp</span>
            </div>
        </div>
        <div class="clearfix">
            <label for="analyticskey">@Ideastrike.Localization.Strings.Admin_GoogleAnalytics</label>
            <div class="input">
                @Html.TextBoxFor(model => model.GAnalyticsKey, new { @class = "xlarge" })
                <span class="help-block">@Ideastrike.Localization.Strings.Admin_GoogleAnalyticsHelp</span>
            </div>
        </div>
    </fieldset>
    <fieldset>
        <legend>@Ideastrike.Localization.Strings.Admin_ImageSettings</legend>
        <div class="clearfix">
            <label for="maxthumbnailwidth">@Ideastrike.Localization.Strings.Admin_ThumbnailWidth</label>
            <div class="input">
                @Html.TextBoxFor(model => model.MaxThumbnailWidth, new { @class = "xlarge", type = "number" })
                <span class="help-block">@Ideastrike.Localization.Strings.Admin_ThumbnailWidthHelp</span>
            </div>
        </div>
    </fieldset>
    <fieldset>
        <div class="input">
            <button type="submit" class="btn primary">@Ideastrike.Localization.Strings.Common_Save</button>
        </div>
    </fieldset>
}