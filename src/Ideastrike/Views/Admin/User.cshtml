@model Ideastrike.Models.User

<ul class="pills">
    <li><a href="/admin/">Admin Home</a></li>
    <li><a href="/admin/settings">Settings</a></li>
    <li class="active"><a href="/admin/users">Users</a></li>
    <li><a href="/admin/moderation">Moderation</a></li>
</ul>
<div class="pull-right well">
    <img src="@Model.AvatarUrl" alt="@Model.UserName" title="@Model.UserName" />
</div>
<form action="/admin/user" method="POST">
    @Html.HiddenFor(model => model.Id)
    <fieldset>
        <legend>User Details</legend>
        <div class="clearfix">
            <label for="UserName">User name:</label>
            <div class="input">@Html.EditorFor(model => model.UserName)</div>
        </div>
        <div class="clearfix">
            <label for="Email">Email:</label>
            <div class="input">@Html.EditorFor(model => model.Email)</div>
        </div>
        <div class="clearfix">
            <label for="Identity">Identity:</label>
            <div class="input">@Html.EditorFor(model => model.Identity)</div>
        </div>
        <div class="clearfix">
            <label for="Github">Github:</label>
            <div class="input">@Html.EditorFor(model => model.Github)</div>
        </div>
        <div>
            <label for="Is Active">Active:</label>
            <div class="input">
                <input type="checkbox" @if (Model.IsActive)
                                       { 
                                           @:checked="checked" 
                                       }  />
            </div>
        </div>
    
        <div>
            <button type="submit" class="btn success">Update</button>
        </div>
    </fieldset>
</form>
<div class="actions">
    <form method="post" action="/admin/user/ban">
        <input type="hidden" name="Id" value="@Model.Id" />
        <button class="btn danger">Drop the Ban-Hammer&#8482;</button>
    </form>
</div>
